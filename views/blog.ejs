<!DOCTYPE html>
<html>
<head>
  <%- include("./partials/head") %>
  <title><%= blog.title %></title>
</head>
<body>
  <%- include("./partials/nav") %>

  <div class="container mt-5">
    <div class="card shadow-lg">
      <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Blog Cover">
      <div class="card-body">
        <h2 class="card-title"><%= blog.title %></h2>
        <p class="text-muted">
          By 
          <a href="/blog/user/<%= blog.createdBy._id %>/blogs" class="text-decoration-none">
            <strong><%= blog.createdBy.name %></strong>
          </a>
        </p>
        <p class="card-text mt-4" style="white-space: pre-line;"><%= blog.body %></p>
        <a href="/" class="btn btn-secondary mt-3">‚Üê Back to Home</a>
      </div>
    </div>
  </div>

  <%- include("./partials/script") %>
</body>
</html>
