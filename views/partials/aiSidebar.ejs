<!-- Toggle Button -->
<button id="toggleAiBtn"
  <% if (user) { %>
    onclick="toggleAISidebar()"
    title="Use AI Assistant"
  <% } else { %>
    onclick="alert('Please log in first to use the AI Assistant')"
    style="cursor:not-allowed;"
    title="Please log in to use AI Assistant"
  <% } %>
>
  Use AI Assistant
</button>

<!-- Gemini AI Sidebar -->
<div id="aiSidebar">
  <h5 class="mb-3">üß† Gemini AI Assistant</h5>

  <select id="aiAction" class="form-select form-select-sm mb-2">
    <option value="describe">Generate Description</option>
    <option value="summarize">Summarize</option>
    <option value="improve">Improve Writing</option>
  </select>

  <textarea
    id="aiInput"
    class="form-control form-control-sm mb-2"
    rows="5"
    placeholder="Paste blog title or content..."
  ></textarea>

  <button id="aiGenerateBtn" onclick="runGemini()">
    Generate ‚ú®
  </button>

  <div
    id="aiOutput"
    class="border rounded p-2 bg-dark text-white small mt-2"
    style="min-height: 100px;"
  ></div>
</div>

<style>
  #aiSidebar {
    position: fixed;
    top: 60px;
    right: 0;
    width: 280px;
    height: 80vh;
    background-color: #212529;
    color: white;
    padding: 15px;
    overflow-y: auto;
    z-index: 999;
    box-shadow: -2px 0 10px rgba(0, 0, 0, 0.5);
    font-size: 0.9rem;
    border-left: 3px solid #0d6efd;
    border-radius: 12px 0 0 12px;
    transition: transform 0.3s ease-in-out;
    transform: translateX(100%);
  }

  /* ‚úÖ FIXED: Always visible button */
  #aiGenerateBtn {
    display: block;
    width: 100%;
    background-color: #0d6efd !important;
    color: #ffffff !important;
    border: none;
    border-radius: 30px;
    padding: 8px;
    font-weight: 600;
    cursor: pointer;
    opacity: 1 !important;
    visibility: visible !important;
  }

  #aiGenerateBtn:hover {
    background-color: #0b5ed7 !important;
  }

  #toggleAiBtn {
    position: fixed;
    top: 65px;
    right: 10px;
    z-index: 1000;
    background-color: #0d6efd;
    border: none;
    color: white;
    padding: 8px 16px;
    font-size: 0.85rem;
    border-radius: 20px;
    cursor: pointer;
    font-weight: 600;
    box-shadow: 0 4px 8px rgba(0,0,0,0.2);
  }

  .sidebar-visible #toggleAiBtn {
    right: 300px;
  }

  /* üì± Mobile refinements */
  @media (max-width: 768px) {
    #aiSidebar {
      width: 100%;
      height: 45vh;
      bottom: 0;
      top: auto;
      border-radius: 16px 16px 0 0;
      transform: translateY(100%);
    }

    #toggleAiBtn {
      bottom: 70px;
      top: auto;
    }

    .sidebar-visible #toggleAiBtn {
      right: 10px;
    }
  }
</style>

<script>
  function toggleAISidebar() {
    const sidebar = document.getElementById("aiSidebar");
    const body = document.body;
    const isMobile = window.innerWidth <= 768;

    if (body.classList.contains("sidebar-visible")) {
      sidebar.style.transform = isMobile
        ? "translateY(100%)"
        : "translateX(100%)";
      body.classList.remove("sidebar-visible");
      document.getElementById("toggleAiBtn").textContent = "Use AI Assistant";
    } else {
      sidebar.style.transform = isMobile
        ? "translateY(0%)"
        : "translateX(0%)";
      body.classList.add("sidebar-visible");
      document.getElementById("toggleAiBtn").textContent = "Hide AI Assistant";
    }
  }

  async function runGemini() {
    const prompt = document.getElementById("aiInput").value.trim();
    const output = document.getElementById("aiOutput");

    if (!prompt) {
      alert("Please enter some text");
      return;
    }

    output.innerHTML = "<em>Generating...</em>";

    try {
      const res = await fetch("/generate", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ prompt })
      });

      const data = await res.json();

      if (!res.ok) {
        output.innerHTML =
          "<span class='text-warning'>‚ö†Ô∏è " +
          (data.error || "AI temporarily unavailable") +
          "</span>";
        return;
      }

      output.textContent = data.text;

    } catch (err) {
      console.error("AI error:", err);
      output.innerHTML =
        "<span class='text-danger'>‚ö†Ô∏è AI request failed</span>";
    }
  }

  document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("aiSidebar");
    sidebar.style.transform =
      window.innerWidth <= 768
        ? "translateY(100%)"
        : "translateX(100%)";
  });
</script>
