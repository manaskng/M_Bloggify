<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title>HomePage</title>

  <style>
    .card:hover {
      box-shadow: 0 6px 20px rgba(13, 110, 253, 0.15);
      transform: translateY(-2px);
      transition: all 0.2s ease;
    }

    /* Floating Add Blog Button */
    .fab {
      position: fixed;
      bottom: 24px;
      right: 24px;
      width: 56px;
      height: 56px;
      background-color: #0a3d91;
      color: white;
      font-size: 32px;
      border-radius: 50%;
      text-decoration: none;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: 0 6px 15px rgba(10, 61, 145, 0.35);
      z-index: 1000;
    }

    .fab:hover {
      background-color: #08306b;
      transform: scale(1.05);
    }

    /* NEW badge */
    .new-badge {
      position: absolute;
      top: 10px;
      left: 10px;
      background-color: #ef4444;
      color: white;
      font-size: 0.7rem;
      font-weight: 700;
      padding: 4px 8px;
      border-radius: 999px;
      z-index: 10;
    }

    /* Sorting bar */
    .sorting-bar {
      display: flex;
      justify-content: flex-end;
      margin-bottom: 16px;
    }

    .sorting-select {
      max-width: 220px;
      border-radius: 999px;
    }

    @media (max-width: 768px) {
      .fab {
        bottom: 20px;
        right: 20px;
      }

      .sorting-bar {
        justify-content: center;
      }
    }
  </style>
</head>

<body>
  <%- include("./partials/nav") %>

  <main class="container mt-4">

    <h2 class="mb-3 text-center">ðŸŒŸ Latest Blogs</h2>

    <!-- Sorting Dropdown -->
    <div class="sorting-bar">
      <select
        class="form-select sorting-select"
        onchange="location = this.value;"
      >
        <option value="/?sort=latest" <%= sort === 'latest' ? 'selected' : '' %>>
          Sort by: Latest
        </option>
        <option value="/?sort=endorsed" <%= sort === 'endorsed' ? 'selected' : '' %>>
          Sort by: Most Endorsed
        </option>
      </select>
    </div>

    <% if (!user) { %>
      <div
        class="card mb-4 shadow-sm border border-5"
        style="border-color: #0a3d91; background: linear-gradient(90deg, #e7f1ff 0%, #ffffff 100%);"
      >
        <div class="card-body row align-items-center g-3">
          <div class="col-md-8">
            <h4 class="fw-bold" style="color:#0a3d91;">
              Welcome to M_bloggify
            </h4>
            <p class="text-secondary">
              Create blogs, endorse ideas, and explore content built by the community.
            </p>
          </div>
          <div class="col-md-4 text-md-end">
            <a href="/user/signin" class="btn btn-outline-primary me-2 px-4 py-2 fw-semibold rounded-pill">
              Login
            </a>
            <a href="/user/signup" class="btn px-4 py-2 fw-semibold rounded-pill" style="background-color:#0a3d91; color:white;">
              Sign Up
            </a>
          </div>
        </div>
      </div>
    <% } %>

    <% if (blogs.length === 0) { %>
      <p class="text-center">No blogs found.</p>
    <% } else { %>

      <div class="row">
        <% blogs.forEach(blog => { 
          const isNew =
            Date.now() - new Date(blog.createdAt).getTime() <
            24 * 60 * 60 * 1000;
        %>

          <div class="col-lg-4 col-md-6 col-sm-12 mb-4 position-relative">

            <% if (isNew) { %>
              <span class="new-badge">NEW</span>
            <% } %>

            <!-- Reusable blog card with endorse -->
            <%- include("./partials/blog-card", { blog, user }) %>

          </div>
        <% }) %>
      </div>

    <% } %>
  </main>

  <% if (user) { %>
    <a href="/blog/add-new" class="fab" title="Add Blog">
      +
    </a>
  <% } %>

  <%- include('./partials/aiSidebar') %>
  <%- include('./partials/footer') %>
  <%- include("./partials/script") %>
</body>
</html>
