<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("./partials/head") %>
  <title><%= userName %>'s Blogs</title>

  <style>
    .profile-header {
      background: linear-gradient(90deg, #e7f1ff 0%, #ffffff 100%);
      border-left: 6px solid #0a3d91;
      border-radius: 12px;
    }

    .profile-name {
      color: #0a3d91;
      font-weight: 700;
    }

    .empty-state {
      color: #6c757d;
      font-size: 1.1rem;
    }
  </style>
</head>

<body>
  <%- include("./partials/nav") %>

  <main class="container mt-4">

    <!-- Profile Header -->
    <div class="profile-header p-4 mb-5 shadow-sm">
      <h2 class="profile-name mb-1">
        <%= userName %>'s Blogs
      </h2>
      <p class="text-secondary mb-0">
        All blogs published by <strong><%= userName %></strong>
      </p>
    </div>

    <% if (blogs.length === 0) { %>
      <p class="text-center empty-state">
        No blogs published yet.
      </p>
    <% } else { %>

      <div class="row">
        <% blogs.forEach(blog => { %>

          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <%- include("./partials/blog-card", { blog, user }) %>
          </div>

        <% }) %>
      </div>

    <% } %>
  </main>

  <!-- AI Sidebar -->
  <%- include('./partials/aiSidebar') %>

  <!-- Footer -->
  <%- include('./partials/footer') %>

  <%- include("./partials/script") %>
</body>
</html>
